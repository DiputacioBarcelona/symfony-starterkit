<div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col d-none d-lg-block pt-1">
        <a href="https://diba.cat">
            <img src="/build/img/logos/diba.svg" alt="Diputació de Barcelona" class="logo-md">
        </a>
    </div>
    <div class="col justify-content-end mt-auto">
        <div class="row">
            <div class="col border-end">
                <form role="search" action="#">
                    <div class="input-group">
                        <input type="text" class="form-control p-0" placeholder="Cerca..." aria-label="Cerca...">
                        <span class="input-group-btn">
                            <button class="btn btn-default p-0 focus-ring" type="submit" aria-label="Cerca">
                                <i class="bi bi-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
            </div>
            <div class="col-auto text-end{% if is_granted('IS_AUTHENTICATED_FULLY') %} border-end{% endif %}">
                {{ include('partials/userinfo.html.twig') }}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="col-auto text-end">
                    <div class="d-flex align-items-center">
                        <a class="nav-item nav-link me-2" href="{{ path('back.admin') }}" title="Administració">
                            <span class="bi bi-gear-fill c-text-light"></span>
                        </a>
                        {{ include('partials/appinfo.html.twig') }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
